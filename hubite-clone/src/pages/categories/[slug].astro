// Server-side rendering for dynamic category pages (supports both slug and ID)
export const prerender = false;

import BaseLayout from '../../ui/layouts/BaseLayout.astro';
import CreatorsGrid from '../../ui/components/CreatorsGrid.astro';
import CategorySEO from '../../ui/components/CategorySEO.astro';
import { strapiClient } from '../../lib/strapi';
import type { Category, Creator, SearchParams } from '../../types/strapi';

// –û—Ç—Ä–∏–º—É—î–º–æ slug –∞–±–æ ID –∫–∞—Ç–µ–≥–æ—Ä—ñ—ó –∑ URL
const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/categories');
}

// –°–ø–æ—á–∞—Ç–∫—É —Å–ø—Ä–æ–±—É—î–º–æ —è–∫ slug, –ø–æ—Ç—ñ–º —è–∫ ID
let isNumericId = false;
let category: Category | null = null;
let creators: Creator[] = [];
let totalCreators = 0;
let error: string | null = null;

console.log(`üîç Category parameter: ${slug}`);

// –û—Ç—Ä–∏–º—É—î–º–æ –ø–∞—Ä–∞–º–µ—Ç—Ä–∏ –ø–æ—à—É–∫—É —Ç–∞ —Ñ—ñ–ª—å—Ç—Ä–∞—Ü—ñ—ó –∑ URL
const url = new URL(Astro.request.url);
const searchParams: SearchParams = {
  query: url.searchParams.get('search') || undefined,
  sortBy: (url.searchParams.get('sort') as any) || 'relevance',
  page: parseInt(url.searchParams.get('page') || '1'),
  pageSize: 24,
  isFree: url.searchParams.get('free') === 'true' ? true : undefined,
  verified: url.searchParams.get('verified') === 'true' ? true : undefined,
  featured: url.searchParams.get('featured') === 'true' ? true : undefined,
  location: url.searchParams.get('location') || undefined,
  priceRange: url.searchParams.get('priceMin') || url.searchParams.get('priceMax') ? {
    min: parseInt(url.searchParams.get('priceMin') || '0'),
    max: parseInt(url.searchParams.get('priceMax') || '1000')
  } : undefined,
};

// –°–ø—Ä–æ–±—É—î–º–æ –∑–∞–≤–∞–Ω—Ç–∞–∂–∏—Ç–∏ –∫–∞—Ç–µ–≥–æ—Ä—ñ—é —Å–ø–æ—á–∞—Ç–∫—É —è–∫ slug, –ø–æ—Ç—ñ–º —è–∫ ID
try {
  console.log(`üîç Trying to load category as slug: ${slug}`);
  
  // –°–ø–æ—á–∞—Ç–∫—É —Å–ø—Ä–æ–±—É—î–º–æ —è–∫ slug
  let categoryResponse = await strapiClient.getCategoryBySlug(slug);
  
  if (!categoryResponse.data || categoryResponse.data.length === 0) {
    // –Ø–∫—â–æ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ —è–∫ slug —ñ –ø–∞—Ä–∞–º–µ—Ç—Ä —á–∏—Å–ª–æ–≤–∏–π, —Å–ø—Ä–æ–±—É—î–º–æ —è–∫ ID
    if (!isNaN(Number(slug))) {
      console.log(`üîç Slug not found, trying as ID: ${slug}`);
      isNumericId = true;
      categoryResponse = await strapiClient.getCategoryById(slug);
    }
  }
  
  category = categoryResponse.data[0] || null;
  
  if (category) {
    // –ó–∞–≤–∞–Ω—Ç–∞–∂—É—î–º–æ –∫—Ä–µ–∞—Ç–æ—Ä—ñ–≤ –¥–ª—è –∑–Ω–∞–π–¥–µ–Ω–æ—ó –∫–∞—Ç–µ–≥–æ—Ä—ñ—ó
    // –í–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É—î–º–æ ID –∫–∞—Ç–µ–≥–æ—Ä—ñ—ó –¥–ª—è –ø–æ—à—É–∫—É –∫—Ä–µ–∞—Ç–æ—Ä—ñ–≤, –æ—Å–∫—ñ–ª—å–∫–∏ —Ü–µ –Ω–∞–¥—ñ–π–Ω—ñ—à–µ
    const creatorsResponse = await strapiClient.getCreatorsByCategoryId(category.id, searchParams);
    
    creators = creatorsResponse.data || [];
    totalCreators = creatorsResponse.meta?.pagination?.total || creators.length;
    
    console.log(`‚úÖ Category found: ${category.name} (ID: ${category.id}, slug: ${category.slug}), ${creators.length}/${totalCreators} creators`);
  }
  
} catch (err) {
  console.error('‚ùå Category Page API Error:', err);
  error = `–ü–æ–º–∏–ª–∫–∞ –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –¥–∞–Ω–∏—Ö: ${err instanceof Error ? err.message : '–ù–µ–≤—ñ–¥–æ–º–∞ –ø–æ–º–∏–ª–∫–∞'}`;
}

// –Ø–∫—â–æ –∫–∞—Ç–µ–≥–æ—Ä—ñ—è –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–∞, –∞–ª–µ –Ω–µ–º–∞—î –ø–æ–º–∏–ª–∫–∏ - –≤—Å—Ç–∞–Ω–æ–≤–ª—é—î–º–æ –ø–æ–º–∏–ª–∫—É
if (!category && !error) {
  error = `–ö–∞—Ç–µ–≥–æ—Ä—ñ—è –∑ ${isNumericId ? 'ID' : 'slug'} "${slug}" –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–∞. –ü–µ—Ä–µ–≤—ñ—Ä—Ç–µ –ø—Ä–∞–≤–∏–ª—å–Ω—ñ—Å—Ç—å ${isNumericId ? '–Ω–æ–º–µ—Ä–∞' : '–Ω–∞–∑–≤–∏'} –∫–∞—Ç–µ–≥–æ—Ä—ñ—ó.`;
}

// SEO —Ç–∞ –º–µ—Ç–∞ –¥–∞–Ω—ñ
const pageTitle = category 
  ? `${category.name} - –ö–∞—Ç–µ–≥–æ—Ä—ñ—è –∫—Ä–µ–∞—Ç–æ—Ä—ñ–≤ | Hubite Clone`
  : '–ö–∞—Ç–µ–≥–æ—Ä—ñ—è –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–∞';

const pageDescription = category 
  ? `–í—ñ–¥–∫—Ä–∏–π—Ç–µ ${totalCreators} –∫—Ä–µ–∞—Ç–æ—Ä—ñ–≤ –≤ –∫–∞—Ç–µ–≥–æ—Ä—ñ—ó ${category.name}. ${category.description || '–ï–∫—Å–∫–ª—é–∑–∏–≤–Ω–∏–π –∫–æ–Ω—Ç–µ–Ω—Ç, –≤–µ—Ä–∏—Ñ—ñ–∫–æ–≤–∞–Ω—ñ –ø—Ä–æ—Ñ—ñ–ª—ñ.'}`
  : '–ö–∞—Ç–µ–≥–æ—Ä—ñ—è –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–∞';

// –ü–∞–≥—ñ–Ω–∞—Ü—ñ—è
const currentPage = searchParams.page || 1;
const hasMorePages = totalCreators > (currentPage * (searchParams.pageSize || 24));
const hasPrevPage = currentPage > 1;

// –§—É–Ω–∫—Ü—ñ—è –¥–ª—è —Å—Ç–≤–æ—Ä–µ–Ω–Ω—è URL –∑ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
const createFilterUrl = (newParams: Record<string, string | undefined>) => {
  const params = new URLSearchParams();
  
  // –ó–±–µ—Ä—ñ–≥–∞—î–º–æ —ñ—Å–Ω—É—é—á—ñ –ø–∞—Ä–∞–º–µ—Ç—Ä–∏
  if (searchParams.query) params.set('search', searchParams.query);
  if (searchParams.sortBy && searchParams.sortBy !== 'relevance') params.set('sort', searchParams.sortBy);
  if (searchParams.isFree) params.set('free', 'true');
  if (searchParams.verified) params.set('verified', 'true');
  if (searchParams.featured) params.set('featured', 'true');
  if (searchParams.location) params.set('location', searchParams.location);
  if (searchParams.priceRange?.min) params.set('priceMin', searchParams.priceRange.min.toString());
  if (searchParams.priceRange?.max && searchParams.priceRange.max < 1000) params.set('priceMax', searchParams.priceRange.max.toString());
  
  // –î–æ–¥–∞—î–º–æ –Ω–æ–≤—ñ –ø–∞—Ä–∞–º–µ—Ç—Ä–∏
  Object.entries(newParams).forEach(([key, value]) => {
    if (value !== undefined) {
      params.set(key, value);
    } else {
      params.delete(key);
    }
  });
  
  return `/categories/${slug}${params.toString() ? `?${params.toString()}` : ''}`;
};

// –î–æ–¥–∞—Ç–∫–æ–≤–∞ —ñ–Ω—Ñ–æ—Ä–º–∞—Ü—ñ—è –¥–ª—è –ª–æ–≥—É–≤–∞–Ω–Ω—è
console.log(`üîç Processing category: ${slug} (type: ${isNumericId ? 'ID' : 'slug'})`);
