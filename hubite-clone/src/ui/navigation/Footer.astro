---
import { t } from '../../lib/i18n';
---

<footer class="bg-gray-900 text-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="h-8 w-8 rounded-lg bg-gradient-to-br from-pink-500 to-purple-600 flex items-center justify-center">
            <span class="text-white font-bold text-sm">H</span>
          </div>
          <span class="text-xl font-bold">Hubite</span>
        </div>
        <p class="text-gray-400 text-sm max-w-md">
          {t('seo.defaultDescription')}
        </p>
        <div class="mt-6">
          <p class="text-xs text-gray-500">
            ðŸ”ž {t('footer.adultContent')}
          </p>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold mb-4">{t('footer.quickLinks')}</h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('nav.home')}
            </a>
          </li>
          <li>
            <a href="/free-onlyfans" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('nav.freeOnlyFans')}
            </a>
          </li>
          <li>
            <a href="/categories" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('nav.categories')}
            </a>
          </li>
          <li>
            <a href="/locations" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('nav.locations')}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Legal & Support -->
      <div>
        <h3 class="text-sm font-semibold mb-4">{t('footer.legalSupport')}</h3>
        <ul class="space-y-2">
          <li>
            <a href="/privacy" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('footer.privacyPolicy')}
            </a>
          </li>
          <li>
            <a href="/terms" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('footer.termsOfService')}
            </a>
          </li>
          <li>
            <a href="/dmca" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('footer.dmcaPolicy')}
            </a>
          </li>
          <li>
            <a href="/contact" class="text-gray-400 hover:text-white text-sm transition-colors">
              {t('footer.contactUs')}
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Section -->
