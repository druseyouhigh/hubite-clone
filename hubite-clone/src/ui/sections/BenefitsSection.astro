---
import { t } from '../../lib/i18n';

interface Props {
  title?: string;
  subtitle?: string;
  benefits?: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { 
  title = t('freeOnlyFans.benefits.title'),
  subtitle = t('freeOnlyFans.benefits.subtitle'),
  benefits = [
    {
      icon: 'üí∞',
      title: t('freeOnlyFans.benefits.noCost.title'),
      description: t('freeOnlyFans.benefits.noCost.description')
    },
    {
      icon: '‚≠ê',
      title: t('freeOnlyFans.benefits.quality.title'),
      description: t('freeOnlyFans.benefits.quality.description')
    },
    {
      icon: '‚ö°',
      title: t('freeOnlyFans.benefits.instant.title'),
      description: t('freeOnlyFans.benefits.instant.description')
    }
  ]
} = Astro.props;
---

<section class="bg-white py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        {title}
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
        {subtitle}
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {benefits.map((benefit) => (
        <div class="relative rounded-2xl border border-gray-200 bg-white p-8 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-green-100 to-emerald-100 rounded-lg mb-6">
            <span class="text-2xl">{benefit.icon}</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            {benefit.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section> 