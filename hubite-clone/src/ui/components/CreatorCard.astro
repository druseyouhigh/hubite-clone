---
import type { Creator } from '../../types/strapi';
import { getCreatorMainImage } from '../../lib/utils/creators';
import { t, formatPrice as i18nFormatPrice, formatNumber } from '../../lib/i18n';

interface Props {
  creator: Creator;
  showStats?: boolean;
  className?: string;
}

const { creator, showStats = true, className = '' } = Astro.props;

// Отримуємо реальне зображення з CMS
const avatarImage = getCreatorMainImage(creator);
const price = creator.price || 0;
const isFree = creator.isFree || price === 0;

// Форматування статистики
const formatStat = (num: number) => {
  return formatNumber(num);
};
---

<a 
  href={`/creator/${creator.username}`}
  class={`creator-card group relative overflow-hidden rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-xl cursor-pointer block ${className}`}
>
  <!-- Background Image -->
  <div class="relative aspect-[3/4] w-full">
    {avatarImage ? (
      <img 
        src={avatarImage} 
        alt={`${creator.name} profile`}
        class="absolute inset-0 h-full w-full object-cover"
        loading="lazy"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      />
    ) : null}
    
    <!-- Fallback gradient background -->
    <div class={`absolute inset-0 bg-gradient-to-br from-pink-400 to-purple-600 flex items-center justify-center text-white text-4xl font-bold ${avatarImage ? 'hidden' : ''}`}>
      {creator.name?.charAt(0)?.toUpperCase() || 'U'}
    </div>
    
    <!-- Gradient overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
    
    <!-- Top badges and price -->
    <div class="absolute top-3 left-3 right-3 flex items-start justify-between">
      <!-- Price badge -->
      <div class="rounded-full bg-blue-600 px-3 py-1.5 text-sm font-semibold text-white shadow-lg">
        {i18nFormatPrice(price)}
      </div>
      
      <!-- Profile button -->
      <div class="rounded-full bg-cyan-400 px-4 py-1.5 text-sm font-semibold text-white shadow-lg transition-all group-hover:bg-cyan-500">
        {t('components.creatorCard.viewProfile')}
      </div>
    </div>
    
    <!-- Bottom content -->
    <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
      <!-- Username -->
      <div class="mb-2">
        <p class="text-sm font-medium opacity-90">@{creator.username || 'unknown'}</p>
      </div>
      
      <!-- Name -->
      <div class="mb-3">
        <h3 class="text-lg font-bold leading-tight">
          {creator.name || 'Unknown Creator'}
        </h3>
        {creator.shortDescription && (
          <p class="text-sm opacity-90 line-clamp-1 mt-1">
            {creator.shortDescription}
          </p>
        )}
      </div>
      
      <!-- Stats -->
      {showStats && creator.stats && (
        <div class="flex items-center space-x-4 text-sm">
          {creator.stats.posts !== undefined && (
            <div class="flex items-center space-x-1">
              <div class="flex h-5 w-5 items-center justify-center rounded bg-white/20">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z"/>
                  <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="font-medium">{formatStat(creator.stats.posts)}</span>
            </div>
          )}
          
          {creator.stats.photos !== undefined && (
            <div class="flex items-center space-x-1">
              <div class="flex h-5 w-5 items-center justify-center rounded bg-white/20">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="font-medium">{formatStat(creator.stats.photos)}</span>
            </div>
          )}
          
          {creator.stats.videos !== undefined && (
            <div class="flex items-center space-x-1">
              <div class="flex h-5 w-5 items-center justify-center rounded bg-white/20">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
                </svg>
              </div>
              <span class="font-medium">{formatStat(creator.stats.videos)}</span>
            </div>
          )}
        </div>
      )}
      
      <!-- Verification badge -->
      {creator.isVerified && (
        <div class="absolute top-2 right-2">
          <div class="flex h-6 w-6 items-center justify-center rounded-full bg-blue-500">
            <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
      )}
    </div>
  </div>
</a>

 